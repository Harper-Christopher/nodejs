  <script> 
  function getResults() {
    console.log("Requesting orders clientside from orders page");

    let userid = $("#userid").val();
    console.log("#userid " + userid);

    $.ajax({
        type: 'POST',
        url: 'http://localhost:5050/orderDetail&userid=' + userid,
        success: function(response) {
            console.log(response);
        },
        error: function(xhr, status, err) {
            console.log(xhr.responseText);
        }
    });
    
    $.post("/orderDetails"), function(data) {
        console.log("Back form the server with:");
        console.log(data);

        $("#allOrders").append(userid);
    }
}
  </script>
